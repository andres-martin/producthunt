<div class="container mt-5">
  <div class="row">
    <div class="col-sm-12">
      <h1>Products</h1>
      <div class="text-right">
        <%= link_to 'Publish Product', new_product_path, class: "btn btn-primary mt-2 mb-3" %>
      </div>
      <table class="table">
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>URL</th>
          <th>Description</th>
        </tr>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.url %></td>
            <td><%= product.description %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

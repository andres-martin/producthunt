<div class="container mt-5">
  <div class="row justify-content-sm-center">
    <div class="col-sm-6">
      <h1>Publicar Producto</h1>
      <%= form_for @product do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Enter product's name" %>
        </div>
        <div class="form-group">
          <%= f.url_field :url, class: "form-control input-lg", placeholder: "Enter product's url"%>
        </div>
        <div class="form-group">
          <%= f.text_area :description, class: "form-control input-lg", placeholder: "Enter product's description"%>
        </div>
        <div class="form-group">
          <%= f.submit "Publish Product", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
